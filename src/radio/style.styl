.lite-radio-wrapper
  display: inline-block
  height: 16px
  .lite-radio
    position: relative
    width: 14px
    height: 14px
    border: 1px solid #d9d9d9
    background: #fff
    display: inline-block
    border-radius: 7px
    transition: all .3s
    .lite-radio-dot
      position: absolute
      display: inline-block
      border-radius: 5px
      width: 8px
      height 8px
      top: 3px
      left: 3px
      transition: all .3s
  .lite-radio-label
    position: relative
    bottom: 4px
    margin: 0 2px
    font-size: 14px
    color: #000

.lite-radio-wrapper-checked
  .lite-radio
    border-color: #1890ff
    .lite-radio-dot
      background: #1890ff

.lite-radio-group
  display: flex
  justify-items: center
  .lite-radio-wrapper
    margin: 0 8px 0 0