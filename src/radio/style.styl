.lite-radio-wrapper
  box-sizing: border-box
  display: flex
  flex-wrap: nowrap
  height: 20px
  .lite-radio
    box-sizing: border-box
    position: relative
    display: inline-block
    width: 16px
    height: 16px
    border: 1px solid #d9d9d9
    background: #fff
    border-radius: 8px
    transition: all .3s
    &:after
      content: ' '
      position: absolute;
      left: 4px
      top: 4px
      box-sizing: border-box
      display: table
      border-top: 0
      border-left: 0
      border-radius: 5px
      width: 7px
      height 7px
      transition: all .3s
  .lite-radio-label
    position: relative
    white-space: nowrap
    line-height: 24px
    bottom: 4px
    margin: 0 4px
    font-size: 14px
    color: rgba(0,0,0,0.65)


.lite-radio-wrapper-checked
  .lite-radio
    border-color: #1890ff
    &:after
      background: #1890ff

.lite-radio-group
  display: flex
  justify-items: center
  .lite-radio-wrapper
    margin: 0 8px 0 0