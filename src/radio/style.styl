.lite-radio
  display: inline-block
  .lite-radio-ipt-wrapper
    position: relative
    border: 1px solid #d9d9d9
    width: 14px
    height: 14px
    display: inline-block
    border-radius: 7px
    .lite-radio-checked
      position: absolute
      display: inline-block
      background: #1890ff
      border-radius: 5px
      width: 8px
      height 8px
      top: 3px
      left: 3px
    .lite-radio-ipt
      position: absolute
      margin: 0
  .lite-radio-label
    margin: 0 2px
    font-size: 14px
    color: #000